<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item tools:targetApi="21" name="android:navigationBarColor">@color/matteDark</item>
        <item tools:targetApi="21" name="android:statusBarColor">@color/matteDark</item>
        <item tools:targetApi="27" name="android:windowLightNavigationBar">false</item>
        <item tools:targetApi="23" name="android:windowLightStatusBar">false</item>
    </style>

    <style name="toolbar.theme" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:background">@color/matteDark</item>
    </style>

    <style name="backup.dialog.theme" parent ="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/matteDark</item>
        <item name="android:dialogCornerRadius">8dp</item>
    </style>

</resources>